{
  "name": "timer-record",
  "version": "1.0.0",
  "description": "A powerful CLI work time tracker with automatic activity detection, goals, invoicing, and more. Supports macOS and Linux.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tt": "./dist/bin/tt.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/bin/tt.js",
    "tt": "node dist/bin/tt.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm run test:run"
  },
  "keywords": [
    "time-tracker",
    "cli",
    "productivity",
    "pomodoro",
    "timer",
    "work",
    "tracking",
    "timesheet",
    "invoice",
    "goals",
    "macos",
    "linux"
  ],
  "author": "Fernando Gonzalez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fergonz1993/Timer-recorder.git"
  },
  "homepage": "https://github.com/Fergonz1993/Timer-recorder#readme",
  "bugs": {
    "url": "https://github.com/Fergonz1993/Timer-recorder/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "dependencies": {
    "asciichart": "^1.5.25",
    "better-sqlite3": "^11.6.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "dayjs": "^1.11.13",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.2",
    "@types/node-notifier": "^8.0.5",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
